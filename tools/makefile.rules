###### Special tools' build rules ######

LOGGING_FLAGS = -DNO_PINTOOL_LOG
TOOL_CXXFLAGS += $(LOGGING_FLAGS) -I$(LIBDFT_INC_PATH) -L$(LIBDFT_PATH)
TOOL_LIBS += -L$(LIBDFT_PATH) -ldft

INPUT_FILE=cur_input

TEST_DIR := test
TEST_OBJDIR := $(TEST_DIR)/obj-$(TARGET)/
TEST_BINS := taint_binop_r2r_smoke taint_binop_m2r_smoke taint_binop_r2m_smoke taint_xfer_r2r_smoke taint_xfer_m2r_smoke taint_xfer_r2m_smoke taint_xfer_pushpop_smoke taint_xfer_stos_smoke taint_xfer_movbe_smoke taint_xfer_movlph_smoke taint_xfer_lea_smoke
TEST_BINARIES := $(addprefix $(TEST_OBJDIR),$(addsuffix $(EXE_SUFFIX),$(TEST_BINS)))

# Custom build rule for mini_test with debug symbols and no optimization
$(OBJDIR)mini_test$(EXE_SUFFIX): mini_test.cpp
test_mini: $(OBJDIR)/track$(PINTOOL_SUFFIX) ${OBJDIR}/mini_test$(EXE_SUFFIX)
	$(PIN) -t $< -- $(OBJDIR)mini_test$(EXE_SUFFIX)  ${INPUT_FILE}

test_mini_v2: $(OBJDIR)/track_v2$(PINTOOL_SUFFIX) ${OBJDIR}/mini_test_v2$(EXE_SUFFIX)
	$(PIN) -t $< -- $(OBJDIR)mini_test_v2$(EXE_SUFFIX) ${INPUT_FILE}

test_granularity: $(OBJDIR)/track$(PINTOOL_SUFFIX) ${OBJDIR}/granularity_test$(EXE_SUFFIX)
	$(PIN) -t $< -- $(OBJDIR)granularity_test$(EXE_SUFFIX)

test_bins: $(TEST_BINARIES)

$(TEST_OBJDIR):
	mkdir -p $@

$(TEST_OBJDIR)%$(EXE_SUFFIX): $(TEST_DIR)/%.c | $(TEST_OBJDIR)
	$(CC) $(APP_CFLAGS) -g -gcolumn-info -O0 -fno-omit-frame-pointer -fno-pie -no-pie -o $@ $<

test_taint_binop_r2r: $(OBJDIR)/taint_tracer$(PINTOOL_SUFFIX) $(TEST_OBJDIR)taint_binop_r2r_smoke$(EXE_SUFFIX)
	$(PIN) -t $< -- $(TEST_OBJDIR)taint_binop_r2r_smoke$(EXE_SUFFIX)

test_taint_binop_m2r: $(OBJDIR)/taint_tracer$(PINTOOL_SUFFIX) $(TEST_OBJDIR)taint_binop_m2r_smoke$(EXE_SUFFIX)
	$(PIN) -t $< -- $(TEST_OBJDIR)taint_binop_m2r_smoke$(EXE_SUFFIX)

test_taint_binop_r2m: $(OBJDIR)/taint_tracer$(PINTOOL_SUFFIX) $(TEST_OBJDIR)taint_binop_r2m_smoke$(EXE_SUFFIX)
