check_taint_binops: test_bins $(OBJDIR)/taint_tracer$(PINTOOL_SUFFIX)
	$(TEST_DIR)/check_taint_binops.sh "$(PIN)" "$(OBJDIR)/taint_tracer$(PINTOOL_SUFFIX)" "$(TEST_OBJDIR)"

check_taint_xfer: test_bins $(OBJDIR)/taint_tracer$(PINTOOL_SUFFIX)
	$(TEST_DIR)/check_taint_xfer.sh "$(PIN)" "$(OBJDIR)/taint_tracer$(PINTOOL_SUFFIX)" "$(TEST_OBJDIR)"

clean: clean-tests

clean-tests:
	rm -rf $(TEST_OBJDIR) taint_trace_*.txt
